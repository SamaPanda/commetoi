{% extends "base.html.twig" %}
{% block title %}List{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-1">{{ count }} books</div>
        <div class="col">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    {% if current > 1 %}
                        <li class="page-item"><a class="page-link" href="{{ path('index', {page:current-1}) }}">Previous</a></li>
                    {% endif %}
                    {% for i in 1..total %}
                        <li class="page-item {% if current == i %}active " aria-current="page"{% else %}"{% endif %}>
                        <a class="page-link"  href="{{ path('index', {page:i}) }}">{{i}}</a>
                        </li>
                    {% endfor %}
                    {% if current < total %}
                        <li class="page-item"><a class="page-link" href="{{ path('index', {page:current+1}) }}">Next</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
    <div class="row">
        {% for product in products %}
            <div class="col-lg-3 col-md-4 col-sm-6 m-0 p-0">
                <div class="card m-1">
                    <div class="card-body">
                        <h5 class="card-title">{{  product.title }}</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Price: {{ product.price}}â‚¬</li>
                        <li class="list-group-item">Ranking: {{ product.ranking }}/10</li>
                        <li class="list-group-item">Genre: {{ product.genre.name }}</li>
                    </ul>
                    <div class="card-body">
                        <a href="{{ path('book_details', {product: product.id}) }}">Details</a>
                        <a href="#" data-id="{{ product.id }}" class="carts btn btn-primary">Add to cart</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
